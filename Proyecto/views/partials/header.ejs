<!-- Partial: header.ejs - estilos, scripts y barra de navegación -->

<!-- Estilos CSS -->
<link rel="stylesheet" href="/materialize/css/materialize.min.css">
<link rel="stylesheet" href="/nes/nes.min.css">
<link rel="stylesheet" href="/styles.css">

<!-- Scripts JS -->
<script src="/materialize/js/materialize.min.js"></script>
<script src="/main.js"></script>

<!-- Barra de navegación principal -->
<nav class="nav-wrapper blue darken-2" style="padding: 0 15px;">
    <!-- Marca / logo -->
    <span class="brand-logo" style="display:flex;align-items:center;gap:12px;">
        <i class="nes-pokeball"></i>
        <span>TCGCheco</span>
    </span>

    <!-- Menú a la derecha: muestra información del usuario y botón de logout -->
    <ul class="right">
        <% if (user) { %>
            <!-- Saludo al usuario -->
            <li style="padding-right:15px;color:white;">
                Bienvenido, <%= user.name %>
            </li>

            <!-- Formulario de cierre de sesión (botón) -->
            <li>
                <form action="/logout" method="POST" style="display:inline;">
                    <button class="nes-btn is-error" style="margin-top:10px;">
                        Salir
                    </button>
                </form>
            </li>
        <% } %>
    </ul>
</nav>
